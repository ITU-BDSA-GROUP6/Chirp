@page "/"
@model Chirp.Web.Pages.PublicModel
@inject SignInManager<Author> SignInManager
@inject UserManager<Author> UserManager
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    var numPages       = Math.Ceiling((double)Model.TotalCheeps / Model.CheepsPerPage);
    var username       = User.Identity?.Name;
    var authorOpinions = @Model.AuthorOpinionOfCheeps;
    var cheepLikesAndDislikes = @Model.CheepLikesAndDislikes;
}

<div>
    <div>
    @if(SignInManager.IsSignedIn(User))
    {
        <form method="post" asp-page-handler="Cheep">
            <div id="post-cheep-container">
                <label asp-for="CheepText" class="form-label">Hey @username! What's on your mind?</label>
                <input asp-for="CheepText" class="form-control" aria-required="true" />
                <span asp-validation-for="CheepText" class="text-danger"></span>
            </div>
            <div id="post-cheep-button-wrapper">
                <button id="post-cheep-button" type="submit" class="w-100 btn btn-lg btn-primary">Post Cheep!</button>
            </div>
        </form>
    } 
    else
    {
        <p>Wanna Cheep? Click <a asp-area="Identity" asp-page="/Account/Login">here</a> to log in.</p>
    }
    </div>

    <h2> Public Timeline </h2>

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <div class="cheep-wrapper">
                        @* [TODO] If the user does NOT have a Profile Picture, put the default in its place. *@
                        <div class="cheep-profilpicture-wrapper">
                            <img src="/images/blank.png" alt="Profile Picture">
                        </div>

                        <div class="cheep-text-wrapper">
                            <p>
                                <strong>
                                    <a href="/@cheep.Author.UserName">@cheep.Author.UserName</a>
                                </strong>
                                @cheep.Text
                                <small>&mdash; @cheep.TimeStamp</small>
                            </p>
                        </div>

                        <div class="cheep-util-wrapper">
                            @if(SignInManager.IsSignedIn(User) && username != cheep.Author.UserName)
                            {
                                var user = Model.SignedInAuthor;
                                
                                try
                                {
                                    var co_Info = authorOpinions.GetValueOrDefault(cheep.CheepId);
                                    var authorOpinionOfCheep = co_Info.AuthorCheepOpinion;
                                    int cheepNumLikes        = co_Info.NumLikes;
                                    int cheepNumDislikes     = co_Info.NumDislikes;

                                    <form id="followForm" method="post" asp-page-handler="Follow">
                                        @Html.AntiForgeryToken()
                                        @if(user.Following.Any() && user.Following.Contains<Author>(cheep.Author))
                                        {
                                            <input type="hidden" asp-for="IsFollow" value="false" />
                                            <input type="hidden" asp-for="TargetAuthorUserName" value="@cheep.Author.UserName" />
                                            <button type="submit" class="following-button" >
                                                <img id="unfollow" src="/images/unfollow.svg" alt="Unfollow"></img>
                                            </button>
                                        }
                                        else
                                        {
                                            <input type="hidden" asp-for="IsFollow" value="true" />
                                            <input type="hidden" asp-for="TargetAuthorUserName" value="@cheep.Author.UserName" />
                                            <button type="submit" class="following-button" >
                                                <img id="follow" src="/images/follow.svg" alt="Follow"></img>
                                            </button>
                                        }
                                    </form>

                                    <form id="likeDis" method="post" asp-page-handler="DislikeOrLike">
                                        <input type="hidden" asp-for="TargetCheepId" value="@cheep.CheepId" />
                                        <input type="hidden" asp-for="TargetAuthorUserName" value="@username" />
                                        <button type="submit" name="likeDis" value="like" class="like-button" style="@(authorOpinionOfCheep == Enums.ACO.AuthorCheepOpinion.DISLIKES ? "opacity: 0.5;" : "opacity: 1.0;")">
                                            <img src="/images/thumbup.svg" alt="Like"></img>
                                        </button>
                                        <button type="submit" name="likeDis" value="dislike" class="dislike-button" style="@(authorOpinionOfCheep == Enums.ACO.AuthorCheepOpinion.LIKES ? "opacity: 0.5;" : "opacity: 1.0;")">
                                            <img src="/images/thumbdown.svg" alt="Dislike"></img>
                                        </button>
                                    </form>

                                    <div class="display-number-of-likes-dislikes">
                                        <p>Number of Likes: @cheepNumLikes</p>
                                        <p>Number of Dislikes: @cheepNumDislikes</p>
                                    </div>
                                } 
                                catch(Exception ex)
                                {
                                    <p>Exception Message: @ex.Message</p>
                                }

                            }
                            else if(!SignInManager.IsSignedIn(User))
                            {
                                var currCheep = cheepLikesAndDislikes.GetValueOrDefault(cheep.CheepId);
                                int cheepNumLikes    = currCheep.NumLikes;
                                int cheepNumDislikes = currCheep.NumDislikes;

                                <div class="display-number-of-likes-dislikes">
                                    <p>Number of Likes: @cheepNumLikes</p>
                                    <p>Number of Dislikes: @cheepNumDislikes</p>
                                </div>
                            }

                        </div>
                    </div>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }

    <div class="pagination">
        @for (int i = 0; i <= numPages; i++)
        {
            <a href="/?page=@(i+1)">@(i+1)</a>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
