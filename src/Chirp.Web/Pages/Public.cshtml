@page "/"
@model Chirp.Web.Pages.PublicModel
@inject SignInManager<Author> SignInManager
@inject UserManager<Author> UserManager
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    var numPages = Math.Ceiling((double)Model.totalCheeps / Model.cheepsPerPage);
    var currPage = @Model.PageNumber;
}
<div>
    <div>
    @if(SignInManager.IsSignedIn(User))
    {
        <form method="post">
            <div id="post-cheep-container">
                <label asp-for="CheepText" class="form-label">Hey @User.Identity?.Name! What's on your mind?</label>
                <input asp-for="CheepText" class="form-control" aria-required="true" />
                <span asp-validation-for="CheepText" class="text-danger"></span>
            </div>
            <div id="post-cheep-button-wrapper">
                <button id="post-cheep-button" type="submit" class="w-100 btn btn-lg btn-primary">Post Cheep!</button>
            </div>
        </form>
    } 
    else
    {
        <p>Wanna Cheep? Click <a asp-area="Identity" asp-page="/Account/Login">here</a> to log in.</p>
    }
    </div>



    <h2> Public Timeline </h2>

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.Author.UserName">@cheep.Author.UserName</a>
                        </strong>
                        @cheep.Text
                        <small>&mdash; @cheep.TimeStamp</small>
                    </p>
                </li>
            }
        </ul>
    }

    else
    {
        <em>There are no cheeps so far.</em>
    }

    <div class="pagination">
        @for (int i = 1; i <= numPages; i++)
        {
            <a href="/?page=@i">@i</a>
        }
    </div>
</div>


