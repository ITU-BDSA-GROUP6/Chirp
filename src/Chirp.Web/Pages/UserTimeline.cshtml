@page "/{author}"
@model Chirp.Web.Pages.UserTimelineModel

@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    var routeName = HttpContext.GetRouteValue("author");
}

<div class="user-time-line-container">
    <h3> @routeName's Timeline </h3>
    <ul id="messagelist" class="cheeps">
    @if (Model.Cheeps.Any())
    {
        @foreach (var cheep in Model.Cheeps)
        {
            if (cheep.Author.UserName.Equals(routeName.ToString()))
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.Author.UserName">@cheep.Author.UserName</a>
                        </strong>
                        @cheep.Text
                        <small>&mdash; @cheep.TimeStamp</small>
                    </p>
                </li>
            }
        }
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
    </ul>

    <h3> Following </h3>
    <ul class="cheeps"> @* Change class name to something more universal *@
        @if (Model.Following.Any())
        {
            @foreach (var follow in Model.Following)
            {
                <h5>@follow.UserName</h5>

                @*[TODO] Fix this! Part of ugly part*@
                var followersCheepTask = await Model.GetTop4CheepsFromFollower(follow.UserName);
                var followersCheep = followersCheepTask.ToList();

                @if(followersCheep.Any())
                {
                    @foreach (var cheep in followersCheep)
                    {
                        <li>
                            <p>
                                @cheep.Text
                                <small>&mdash; @cheep.TimeStamp</small>
                            </p>
                        </li>
                    }
                }
            }
        }
        else
        {
            <em>You currently aren't Following anyone.</em>
        }
    </ul>


    <h3> Followers </h3>
    <ul class="cheeps">
        @if (Model.Followers.Any())
        {
            @foreach (var follower in Model.Followers)
            {
                <h5>
                    <a href="/@follower.UserName">@follower.UserName</a>
                </h5>
            }
        }
        else
        {
            <em>You currently have no Followers :(</em>
        }
    </ul>
</div>

    <div class="pagination">
        @for (int i = 1; i <= Math.Ceiling((double) Model.totalCheeps / Model.cheepsPerPage) - 1; i++)
        {
            <a href="/@routeName/?page=@i">@i</a>
        }
    </div>

</div>
